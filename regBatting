import javax.swing.*;

public class regBatting {
	
	private static int gamesPlayed;
	private static int PA;
	private static int atBats;
	private static int hits;
	private static int HR;
	private static int singles;
	private static int doubles;
	private static int triples;
	private static int R;
	private static int RBI;
	private static int SB;
	private static int BB;
	private static int SO;
	private static int HBP;
	private static int sacFly;
	private static double BA;
	private static double OBP;
	private static double slug;
	private static double OPS;
	private static double opsPlus;
	
	//Batting Average
	public static void BA() {
		BA = hits/atBats;
	}
	
	//On Base Percentage
	public static void OBP() {
		OBP = (hits + BB + HBP)/(atBats + BB + HBP + sacFly);
	}
	
	//Slugging Percentage
	public static void slugging( ) {
		int totalBases = hits + doubles + (triples * 2) + (HR * 3);
		slug = totalBases/atBats; 
	}
	
	public static void OPS() {
		OPS = OBP + slug;
	}
	
	public static void opsPlus() {
		
	}
	
	public static void createTable() {
		JFrame myframe = new JFrame("Frame");
        JButton firstButton = new JButton("Connect");

        myframe.setSize(500, 500);
		String[] columnNames = {"Last Name", "First Name", "Games Played", "At Bats"};
		Object[][] data = {{"Trout", "Mike", "500", "500"}, {"Bryant", "Kris", "500", "500"}};
		JTable table = new JTable(data, columnNames);
		JScrollPane tableScrollPane = new JScrollPane(table);
		table.setVisible(true);
		table.setFillsViewportHeight(true);
		table.setAutoCreateRowSorter(true);
		table.setShowGrid(true);
		myframe.add(table);
	    	myframe.pack();           
	    	myframe.setVisible(true);
	}
	
	public static void main(String[] args) {
		
		createTable();
	}

}


